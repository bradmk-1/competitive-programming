/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    private int res = 1;

    private void dfs(TreeNode root, int greatestVal) {
        if (root == null) {
            return;
        }
        
        if (root.val >= greatestVal) {
            res += 1;
        }

        int newGreatest = Math.max(greatestVal, root.val);

        dfs(root.left, newGreatest);
        dfs(root.right, newGreatest);

    }

    public int goodNodes(TreeNode root) {
        if (root == null) {
            return 0;
        }

        dfs(root.left, root.val);
        dfs(root.right, root.val);

        return res;
    }
}

// https://leetcode.com/problems/count-good-nodes-in-binary-tree/
